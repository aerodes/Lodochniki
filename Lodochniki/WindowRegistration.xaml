<Window x:Class="Lodochniki.WindowRegistration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lodochniki"
        mc:Ignorable="d"
        Title="WindowRegistration" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            <StackPanel Orientation="Vertical">
                <Label Content="Логин" FontSize="21" Margin="0 0 0 20"/>
                <Label Content="Пароль" FontSize="21" Margin="0 0 0 20"/>
                <Label Content="Повторите пароль" FontSize="21"/>

            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBox Name="txtNewLogin" Width="150" Height="40" Margin="0 0 0 20"/>
                <TextBox Name="txtNewPass" Width="150" Height="40" Margin="0 0 0 20"/>
                <TextBox Name="txtNewAgeinPass" Width="150" Height="40"/>
            </StackPanel>
        </StackPanel>
        <Button Name="btnSave" Content="Сохранить" Width="100" Height="30" HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" Margin=" 0 0 0 50" Click="btnSave_Click"/>
    </Grid>
</Window>
